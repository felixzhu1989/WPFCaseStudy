<Page x:Class="WpfBasic.BindingBasic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfBasic"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="BindingBasic">

    <Grid>
        <StackPanel>
            <Slider Margin="5" x:Name="slider" />
            <TextBox Margin="5"
                     Text="{Binding ElementName=slider,Path=Value}" />
            <TextBox Margin="5"
                     Text="{Binding ElementName=slider,Path=Value,Mode=OneTime}" />
            <TextBox Margin="5"
                     Text="{Binding ElementName=slider,Path=Value,Mode=OneWay}" />
            <TextBox Margin="5"
                     Text="{Binding ElementName=slider,Path=Value,Mode=OneWayToSource}" />
            <TextBox Margin="5"
                     Text="{Binding Name}" />
        </StackPanel>
    </Grid>
</Page>
